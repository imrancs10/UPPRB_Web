@using UPPRB_Web.Models.Masters;
@{
    ViewBag.Title = "NoticeEntry";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var noticeData = ViewData["NoticeData"] as List<NoticeModel>;
}
<script src="~/Scripts/Masters/noticeEntry.js"></script>
<section id="main-content" style="margin-left:10px">
    <section class="wrapper">
        <!--state overview start-->
        <div class="row state-overview">

            <div class="col-lg-12 col-sm-3">
                <section class="card">
                    <div class="card-body left">
                        <a href="#myModal" data-toggle="modal" class="btn btn-sm btn-success">
                            Add Notice
                        </a>
                        <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content" style="width:150%">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Add New Notice</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @using (Html.BeginForm("NoticeEntry", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <label for="exampleInputEmail1">Entry Type</label>
                                                    <select class="form-control mb-3" style="" id="EntryType" name="EntryType">
                                                    </select>
                                                    <input type="hidden" value="" name="EntryTypeName" />
                                                </div>
                                            </div>
                                            <div class="row" style="display:none;" id="divNotice">
                                                <div class="col-lg-6">
                                                    <label for="exampleInputEmail1">Select Type</label>
                                                    <select class="form-control mb-3" style="width:80%" id="NoticeType" name="NoticeType">
                                                    </select>
                                                </div>
                                                <div class="col-lg-6">
                                                    <label for="exampleInputPassword1">Select Category</label>
                                                    <select class="form-control mb-3" style="width:80%" id="NoticeCategory" name="NoticeCategory">
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <label for="exampleInputEmail1">Subject</label>
                                                    <textarea type="text" class="form-control" id="inputEmail3" placeholder="Enter Subject" name="Subject"> </textarea>
                                                </div>
                                                <div class="col-lg-6">
                                                    <label for="exampleInputPassword1">Notice Date</label>
                                                    <input type="date" class="form-control" id="inputPassword3" placeholder="Notice Date" name="NoticeDate">
                                                </div>
                                            </div><br />
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="custom-control custom-radio custom-control-inline">
                                                        <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input" value="1">
                                                        <label class="custom-control-label" for="customRadioInline1">Upload Web Url</label>
                                                    </div>
                                                    <div class="custom-control custom-radio custom-control-inline">
                                                        <input type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input" value="2">
                                                        <label class="custom-control-label" for="customRadioInline2">Upload File</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <label>File URL</label>
                                                    <div>
                                                        <div class="custom-file">
                                                            <input type="text" class="form-control" disabled id="inputEmail3" placeholder="file" name="fileURL">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <label>File Upload</label>
                                                    <div>
                                                        <div class="custom-file">
                                                            <input type="file" class="custom-file-input" disabled id="customFile" name="postedFile">
                                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <br />
                                            <div class="checkbox">
                                                <label>
                                                    <input class="form-check-input" type="checkbox" id="highlightNew" name="highlightNew" checked> Highlight as New
                                                </label>
                                            </div>
                                            <button type="submit" class="btn btn-primary" style="float:right;">Submit</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <!--state overview end-->
        <div class="row">
            <div class="col-lg-12">
                <section class="card">
                    <header class="card-header">
                        All Notice Details
                    </header>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="table-responsive" style="overflow:auto!important;">
                                <table class="table table-bordered" id="tableCity"></table>
                            </div>
                        </div>
                    </div>
                    @*<table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th style="color:black"><i class=" fa fa-act" style="color:black"></i> Action</th>
                                    <th style="color:black"><i class="fa fa-bullhorn" style="color:black"></i> Entry Type</th>
                                    <th class="hidden-phone" style="color:black"><i class="fa fa-question-circle"></i> Notice Type</th>
                                    <th style="color:black"><i class="fa fa-bookmark" style="color:black"></i> Notice Category</th>
                                    <th style="color:black"><i class="fa fa-bullhorn" style="color:black"></i> Subject</th>
                                    <th class="hidden-phone" style="color:black"><i class="fa fa-question-circle"></i> Notice Date</th>
                                    <th style="color:black"><i class="fa fa-bookmark" style="color:black"></i> file URL</th>
                                    <th class="hidden-phone" style="color:black"><i class="fa fa-question-circle"></i> file Name</th>
                                    <th style="color:black"><i class="fa fa-bookmark" style="color:black"></i> Created Date</th>
                                    <th style="color:black"><i class=" fa fa-edit" style="color:black"></i> Highlighted as New</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in noticeData)
                                {
                                    <tr>
                                        <td>
                                            <i class="fa fa-pencil" id="editUpload" onclick="editUpload(@data.Id)"></i>&nbsp;
                                            <i class="fa fa-trash-o" id="deleteUpload"></i>
                                        </td>
                                        <td style="white-space:nowrap;"><a href="#">@data.EntryTypeName</a></td>
                                        <td class="hidden-phone" style="white-space:nowrap;">@data.NoticeTypeName</td>
                                        <td style="white-space:nowrap;"><a href="#">@data.NoticeCategoryName</a></td>
                                        <td class="hidden-phone" style="white-space:nowrap;">@data.Subject</td>
                                        <td><a href="#">@data.NoticeDate.Value.ToString("dd/MM/yyyy")</a></td>
                                        <td class="hidden-phone" style="white-space:nowrap;">@data.fileURL</td>
                                        <td style="white-space:nowrap;color:blue"><a target="_blank" style=" color: blue;" href="~/FilesUploaded/@data.EntryTypeName/@data.filename">@data.filename</a></td>
                                        <td class="hidden-phone">@data.CreatedDate.Value.ToString("dd/MM/yyyy")</td>
                                        <td><a href="#">@data.IsNew</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>*@
                </section>
            </div>
        </div>
    </section>
    <!--main content end-->
</section>

<script type="text/javascript">
    $(document).ready(function () {
        var tableCity = $("#tableCity").DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ordering": false,
            "pageLength": 10,
            "PaginationType": 'full_numbers',
            "ajax": {
                "url": "/Admin/GetAllNotice",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "EntryTypeName", "name": "EntryTypeName", "autoWidth": true, "title": "Entry Type" },
                { "data": "NoticeTypeName", "name": "NoticeTypeName", "autoWidth": true, "title": "Notice Type" },
                { "data": "NoticeCategoryName", "name": "NoticeCategoryName", "autoWidth": true, "title": "Notice Category" },
                { "data": "Subject", "name": "Subject", "autoWidth": true, "title": "Subject" },
                {
                    "title": "Notice Date",
                    "render": function (data, type, full, meta) {
                        return '<span>' + formatDate(full.NoticeDate) + '</span>';
                    }
                },
                { "data": "fileURL", "name": "fileURL", "autoWidth": true, "title": "File URL" },
                { "data": "filename", "name": "filename", "autoWidth": true, "title": "file Name" },
                {
                    "title": "Created Date",
                    "render": function (data, type, full, meta) {
                        return '<span>' + formatDate(full.CreatedDate) + '</span>';
                    }
                },
                { "data": "IsNew", "name": "IsNew", "autoWidth": true, "title": "Highlighted New" },
                {
                    "title": "Action",
                    "render": function (data, type, full, meta) {
                        var htmlDOM = "";
                        htmlDOM = '<div class="form-group mt-lg">' +
                            '<div class="btn-divider mr-2x mb-1x" role="divider">' +
                            "<a id='lnkEdit' class='btn btn-primary' onclick='javascript:EditCity(" + full.EntryTypeId + "," + full.NoticeType + ",\"" + full.NoticeCategoryId + "\")' href='#'> Edit</a>" +
                            '<span class="label-divider" id="Span1">or</span>' +
                            '<a id="lnkDelete" class="btn btn-danger" onclick="javascript:return openDialogue(' + full.Id + ');" href="#" data-url="DeleteCity">Delete</a>' +
                            '</div>' +
                            '</div>';
                        return htmlDOM;
                    }
                }
            ],
            "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                var pageNumber = 0;
                $.each($('.paginate_button'), function (index, button) {
                    if ($(this).css('background-image') == 'linear-gradient(rgb(88, 88, 88) 0%, rgb(17, 17, 17) 100%)') {
                        pageNumber = $(this).html()
                    }
                });
                if (pageNumber == 0) {
                    $("td:first", nRow).html((pageNumber * info.length) + iDisplayIndex + 1);
                }
                else {
                    pageNumber = pageNumber - 1;
                    $("td:first", nRow).html((pageNumber * info.length) + iDisplayIndex + 1);
                }

                return nRow;
            },
        });
        var info = tableCity.page.info();
        $("#tableCity_filter input")
            .unbind() // Unbind previous default bindings
            .bind("input", function (e) { // Bind our desired behavior
                // If the length is 2 or more characters, or the user pressed ENTER, search
                if (this.value.length >= 2 || e.keyCode == 13) {
                    // Call the API search function
                    tableCity.search(this.value).draw();
                }
                // Ensure we clear the search if they backspace far enough
                if (this.value == "") {
                    tableCity.search("").draw();
                }
                return;
            });
    })
    function EditCity(StateId, Id, CityName) {
        $('#hiddenId').val(Id);
        $('#btnSave').val('Update');
        $('#CityName').val(CityName);
        $('#State').val(StateId);
    }
    function formatDate(noticeDate) {
        var milli = noticeDate.replace(/\/Date\((-?\d+)\)\//, '$1');
        var now = new Date(parseInt(milli));

        var day = ("0" + now.getDate()).slice(-2);
        var month = ("0" + (now.getMonth() + 1)).slice(-2);

        var today = (day) + "-" + (month) + "-" + now.getFullYear();
        return today;
    }
</script>