
@{
    ViewBag.Title = "ForgetPassword";
    Layout = null;
}

<body class="login-body">
    <div class="container">
        <div class="form-signin">
            

            <div class="col-lg-10 w_content pt-20 mt-0">
                <center><img src="~/Content/Images/LOGO.bmp" style="width:100px; height:100px" alt="Uttar Pradesh Police Recruitment & Promotion Board"><h2 class="w-bgph">Uttar Pradesh Police Recruitment & Promotion Board</h2></center>
                <hr>
                <div class="clr"></div>
                <center>
                                           <div class="table-responsive" style="width: 600px; height:400px"><h3>Forget Password</h3>
                                               @using (Html.BeginForm("ForgetPassword", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                               {
                                                   <div class="row">
                                                       <div class="col-lg-6">
                                                           <div class="col-lg-6">
                                                               <label for="exampleInputEmail1">User Name</label>
                                                               <input class="form-control" id="name" name="username" type="text" value="" size="30" />

                                                           </div>
                                                       </div><br />
                                                       <div class="col-lg-6">
                                                           <label for="exampleInputEmail1">Mobile Number</label>
                                                           <input class="form-control" id="mobile" name="mobile" type="text" value="" size="30" />
                                                       </div><br />
                                                       <div class="col-lg-6">
                                                           <div class="col-lg-6">
                                                               <label for="exampleInputEmail1">Email Id</label>
                                                               <input class="form-control" id="name" name="email" type="text" value="" size="30" />

                                                           </div>
                                                       </div>
                                                   </div>                                                   
                                                   <br />
                                                   <center><button type="submit" class="btn btn-default">Submit</button></center>
                                                   

                                                   
                                               }

                                           </div>
                </center>
                <hr>

            </div>

            <div class="clearfix"></div>
        </div>
    </div>
</body>

<script type="text/javascript">
    $(document).ready(function () {
        $('.navbar-nav').find('li').removeClass('active');
        $('a[href="/Home/Administration"]').parent().addClass('active')
    });
</script>
