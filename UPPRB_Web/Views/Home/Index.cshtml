                        </div>


                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>




            </div>


            <div class="col-xl-3 col-lg-12 pl-md-0 pr-md-0 w-bor-r  pb-50  mb-30">
                <div class="single-widget mt-30">
                    <!--<h3 class="title">Updates</h3>-->

                    <nav>
                        <div class="nav nav-tabs text-uppercase  d-flex bd-highlight" id="nav-tab" role="tablist">
                            <a class="nav-link active flex-fill bd-highlight col" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false"><b>Events </b></a>
                        </div>
                    </nav>

                    <marquee scrollamount="5" direction="up" onmouseover="this.stop()" onmouseout="this.start()" style="height: 200px;">
                        <ul class="ultxt1">
                            @foreach (var item in LatestEvent)
                            {
                                <li class="p-10" style="width: 95%">
                                    <h6>

                                        @if (item.IsNew == true)
                                        {
                                            <img id="Image1_0" class="w_fl_ico" src="~/Content/images/new.gif">
                                        }
                                        <span id="ContentPlaceHolder2_Repeater2_Label1_0">Notice/Release (@item.NoticeDate.Value.ToString("dd/MM/yyyy"))</span>
                                    </h6>
                                    @if (!string.IsNullOrEmpty(item.filename))
                                    {
                                        <p style="text-align: justify">
                                            <a href='~/FilesUploaded/Notices/@item.filename' target="_blank"><span id="Label2_0" class="text"> @item.Subject</span></a>
                                        </p>
                                        <a id="HyperLink1_0" class="pull-right price-dec  hvr-float-shadow bg-info" href='~/FilesUploaded/Notices/@item.filename' target="_blank"><u>More..</u></a>
                                    }
                                    else
                                    {
                                        <p style="text-align: justify">
                                            <a href='@item.fileURL' target="_blank"><span id="Label2_0" class="text"> @item.Subject</span></a>
                                        </p>
                                        <a id="HyperLink1_0" class="pull-right price-dec  hvr-float-shadow bg-info" href='@item.fileURL' target="_blank"><u>More..</u></a>
                                    }
                                    <div class="clearfix">
                                    </div>
                                </li>
                            }
                        </ul>
                    </marquee>

                </div>
            </div>

        </div>
    </div>
</section>

<div class="headline">
    <div class="container-fluid">
