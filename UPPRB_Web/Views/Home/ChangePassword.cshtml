
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<div class="" style="margin-top:0px;padding-top:20px;">
    <div class="col-sm-12 col-lg-12">
        <div class="panel panel-primary" style="width:100%;margin:0 auto;padding:5px;">
            <div class="panel-heading">
                Change Password
            </div>
            <div class="panel-body">
                <div class="row">
                    <form id="form" class="form-horizontal" action="ChangePassword" method="post" autocomplete="off">
                        <div class="col-sm-12 col-lg-12">
                            @if (!string.IsNullOrEmpty(Convert.ToString(ViewData["msg"])))
                            {
                                <div class="col-sm-12 col-lg-12">
                                    <div class="form-group">
                                        <label>@Convert.ToString(ViewData["msg"])</label>
                                    </div>
                                </div>
                            }
                            else
                            {
                                    <div class="col-sm-10 col-sm-offset-2">
                                        <div class="form-group">
                                            <label>Old Password</label>
                                            <div>
                                                <input type="password" value="" name="oldpassword" required data-valid="required" class="form-control" 
                                                       id="oldpassword" placeholder="Old Password" autocomplete="off" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>New Password</label>
                                            <div>
                                                <input type="password" value="" name="newpassword" required data-valid="required" class="form-control"
                                                       id="newpassword" placeholder="New Password" autocomplete="off" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            <div>
                                                <input type="password" value="" name="confirmnewpassword" required data-valid="required" class="form-control"
                                                       id="confirmnewpassword" placeholder="Confirm Password" autocomplete="off" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label></label>
                                            <div>
                                                <div>
                                                    <input type="submit" name="Submit" class="btn btn-warning" value="Submit">
                                                    <input type="reset" name="Cancel" class="btn btn-danger" value="Cancel">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

